---
import Section from "@components/Section.astro";
---

<Section>
  <h2 class="text-lg text-center font-bold mb-4">Prețuri</h2>

  <ul class="flex justify-end gap-2">
    <li class="flex-1">
      <article
        class="border rounded-lg p-4 h-full flex flex-col items-center justify-between gap-2 text-center"
      >
        <h3 class="text-sm font-semibold">București și jud. Ilfov</h3>
        <img src="/bucuresti.svg" alt="" class="max-h-48 p-8" />
        <p class="text-xs">
          Începând cu <span class="whitespace-nowrap">100 RON</span>
        </p>
      </article>
    </li>
    <li class="flex-1">
      <article
        class="border rounded-lg p-4 h-full flex flex-col items-center justify-between gap-2 text-center"
      >
        <h3 class="text-sm font-semibold">La nivel național</h3>
        <img src="/romania.svg" alt="" class="max-h-48 p-8" />
        <p class="text-xs">
          Începând cu <span class="whitespace-nowrap">2 RON/km</span>
        </p>
      </article>
    </li>
  </ul>
</Section>
