---
import HomeIcon from "@components/icons/HomeIcon.astro";
import BriefcaseIcon from "@components/icons/BriefcaseIcon.astro";
import BanknotesIcon from "@components/icons/BanknotesIcon.astro";
import NewsPaperIcon from "@components/icons/NewspaperIcon.astro";
import EnvelopeIcon from "@components/icons/EnvelopeIcon.astro";
import NavLink from "./NavLink.astro";
---

<header class="sticky top-0 z-10 backdrop-blur bg-white bg-opacity-30 border-b">
  <div
    class="max-w-7xl mx-auto md:px-4 lg:px-16 py-1 flex flex-col md:items-center justify-between lg:flex-row"
  >
    <a href="/" class="flex items-center gap-4 px-4 md:px-0 py-1">
      <img src="/logo.webp" alt="logo" class="w-10 h-10" />
      <h1 class="font-bold whitespace-nowrap">
        <span class="text-orange-800">TRACTARI</span>
        <span>-PLATFORMA.RO</span>
      </h1>
    </a>
    <nav
      class="w-full overflow-x-auto px-4 md:px-0 pt-1 pb-3 flex items-center md:justify-center lg:justify-end"
    >
      <ul class="w-max flex items-center gap-3">
        <NavLink isActive label="Home">
          <HomeIcon class="w-5 h-5" />
        </NavLink>
        <NavLink label="Servicii">
          <BriefcaseIcon class="w-5 h-5" />
        </NavLink>
        <NavLink label="Tarife">
          <BanknotesIcon class="w-5 h-5" />
        </NavLink>
        <NavLink label="Despre Noi">
          <NewsPaperIcon class="w-5 h-5" />
        </NavLink>
        <NavLink label="Contacte">
          <EnvelopeIcon class="w-5 h-5" />
        </NavLink>
      </ul>
    </nav>
  </div>
</header>
